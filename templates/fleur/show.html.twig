{% extends 'base.html.twig' %}

{% block title %}Fleur{% endblock %}

{% block body %}
<div class="bg-gradient-to-r from-purple-50 to-pink-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-extrabold text-gray-900 text-center mb-10">Fleur Details</h1>

        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <table class="w-full text-left border-collapse border border-gray-200">
                <tbody>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Id</th>
                        <td class="px-6 py-4 text-gray-900">{{ fleur.id }}</td>
                    </tr>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Nom Scientifique</th>
                        <td class="px-6 py-4 text-gray-900">{{ fleur.nomscentifique }}</td>
                    </tr>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Nom Commun</th>
                        <td class="px-6 py-4 text-gray-900">{{ fleur.nomcommun }}</td>
                    </tr>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Couleur</th>
                        <td class="px-6 py-4 text-gray-900">{{ fleur.couleur }}</td>
                    </tr>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Description</th>
                        <td class="px-6 py-4 text-gray-900">{{ fleur.descrpition }}</td>
                    </tr>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Quantité en Stock</th>
                        <td class="px-6 py-4 text-gray-900">{{ fleur.quantitestock }}</td>
                    </tr>
                    <tr class="border-t border-gray-200">
                        <th class="px-6 py-4 bg-gray-50 text-gray-500 font-medium">Prix Unitaire</th>
                        <td class="px-6 py-4 text-gray-900">€{{ fleur.prixunitaire }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-8 flex justify-between">
            <a href="{{ path('app_fleur_index') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                Back to List
            </a>
            <a href="{{ path('app_fleur_edit', {'id': fleur.id}) }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                Edit
            </a>
        </div>

        <div class="mt-4">
            {{ include('fleur/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
